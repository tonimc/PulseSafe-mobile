<resources>

    <!-- Base application theme. -->


    <style name="AppTheme" parent="MaterialNavigationDrawerTheme.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="toolbarElevation">true</item>
        <item name="learningPattern">false</item>

        <item name="drawerType">@integer/DRAWERTYPE_IMAGE</item>
        <item name="rippleBackport">true</item>

        <item name="sectionColorIcon">@color/toolbar_text</item>
        <item name="sectionColorText">@color/toolbar_text</item>
    </style>

    <style name="MaterialSubheaderTheme.Light">
        <item name="subheaderTitleColor">@color/toolbar_text</item>
    </style>

</resources>

